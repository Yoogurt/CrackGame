        <Button android:id="@id/reset_btn" android:background="@drawable/btn_reset_sha" android:text="@string/reset_btn" android:layout_alignParentLeft="true" android:layout_centerVertical="true" style="@style/btn_red_wrap_bg_style" />
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
